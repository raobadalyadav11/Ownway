<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textLayoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:textSize="25dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary"
        android:background="@color/cardview_dark_background"
        android:layout_alignParentTop="true"
        android:text=" Ownway"/>

    <TextView
        android:id="@+id/textLayoutSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:textStyle="italic"
        android:textColor="@color/design_default_color_primary_variant"
        android:padding="10dp"
        android:text="Leaarning Android Development"
        android:layout_below="@id/textLayoutHeader"/>
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/tony_stark"/>
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Name"
        android:layout_margin="20dp"
        android:inputType="text"
        android:layout_below="@id/textLayoutSubHeader"/>
    <Button
        android:id="@+id/btnClickHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Here"
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>